@model List<Reimbursement_Web_System.Models.Ticket>
@using Reimbursement_Web_System.Models

@{
    ViewBag.Title = "Pending Tickets";
}

<h2>Pending Tickets</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Row #</th>
            <th>CRF #</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Date Filed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1; }
        @foreach (var item in ViewBag.pendingTickets)
        {
        <tr>
            <td>@i</td>
            <td>@item.CRF</td>
            <td>@item.User.LastName</td>
            <td>@item.User.FirstName</td>
            <td>@item.DateFiled.ToString("MM/dd/yyyy")</td>
            <td>@Html.ActionLink("View", "ViewTicket", "Admin", new { crf = item.CRF}, new { @class = "btn btn-success" })</td>
        </tr>
            i++;
        }
    </tbody>
</table>

<style>
    .pill {
        border: none;
        color: white;
        padding: 10px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        border-radius: 16px;
    }

    .td-DirectorApproved {
        background-color: green;
    }
</style>