@model Reimbursement_Web_System.Models.Reimbursement

@if (Session["reimbursementId"] == null)
{
    using (Html.BeginForm("SaveReimbursement", "User", FormMethod.Post, new { id = "frmnewprovider" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Reimbursement</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-6 form-group">
                    <label for="Date">Date</label>
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    <label for="Amount">Amount</label>
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="NatureOfExpenditure">Nature of Expenditure</label>
                @Html.EditorFor(model => model.NatureOfExpenditure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NatureOfExpenditure, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            @if (ViewBag.status == "New")
            {
                <button type="submit" class="btn btn-success">Add</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Update</button>
            }
        </div>
    }
}
else
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">User Information</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="Username">Username:</label>
            @Html.Raw(Session["Username"])
        </div>
        <div class="form-group">
            <label for="Username">First Name:</label>
            @Html.Raw(Session["FirstName"])
        </div>
        <div class="form-group">
            <label for="Username">Last Name:</label>
            @Html.Raw(Session["LastName"])
        </div>
        <div class="form-group">
            <label for="Username">Role:</label>
            @Html.Raw(Session["Role"])
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "btn btn-warning" })
    </div>
}