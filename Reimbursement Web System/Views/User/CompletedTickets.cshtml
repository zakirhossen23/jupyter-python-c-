@model List<Reimbursement_Web_System.Models.Ticket>
@using Reimbursement_Web_System.Models

@{
    ViewBag.Title = "Completed Tickets";
}

<h2>Completed Tickets</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Row #</th>
            <th>CRF #</th>
            <th>Date Filed</th>
            <th>Date Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1; }
        @foreach (var item in ViewBag.pendingTickets)
        {
            <tr>
                <td>@i</td>
                <td>@item.CRF</td>
                <td>@item.DateFiled.ToString("MM/dd/yyyy")</td>
                <td>@item.DateCompleted.ToString("MM/dd/yyyy")</td>
                <td>
                    <span>@Html.ActionLink("View", "ViewCompletedTicket", "User", new { crf = item.CRF }, new { @class = "btn btn-info" })</span>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>