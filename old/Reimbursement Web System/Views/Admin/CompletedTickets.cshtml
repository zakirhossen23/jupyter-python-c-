@model List<Reimbursement_Web_System.Models.Ticket>
@using Reimbursement_Web_System.Models

@{
    ViewBag.Title = "Completed Tickets";
}
<div style="display:flex;">
    <h2 style="width: 378px;">Completed Tickets</h2>
    <form action="CompletedTicketsSearch" method="post" style="width: 100%;">
        <div style="width: 100%;padding-top: 26px;">
            <input id="searchbtn" style="right: 0;float: right;" type="submit" value="Search">
            <input name="search" id="search" style="right: 0;float: right;">
        </div>
    </form>
    </div>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Row #</th>
                <th>CRF #</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Date Filed</th>
                <th>Date Completed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1; }
            @foreach (var item in ViewBag.pendingTickets)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.CRF</td>
                    <td>@item.User.LastName</td>
                    <td>@item.User.FirstName</td>
                    <td>@item.DateFiled.ToString("MM/dd/yyyy")</td>
                    <td>@item.DateCompleted.ToString("MM/dd/yyyy")</td>
                    <td>@Html.ActionLink("View", "ViewCompletedTicket", "Admin", new { crf = item.CRF }, new { @class = "btn btn-success" })</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
